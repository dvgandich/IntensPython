deposit = float(input("Введите сумму первоначального депозита: "))
interest_rate = 0.04
year1 = round(deposit * (1 + interest_rate), 2)
year2 = round(year1 * (1 + interest_rate), 2)
year3 = round(year2 * (1 + interest_rate), 2)
print("Сумма на счету в конце первого года:", year1)
print("Сумма на счету в конце второго года:", year2)
print("Сумма на счету в конце третьего года:", year3)
