unit = input("Введите единицы измерения (метры/футы): ")
length = float(input("Введите длину комнаты: "))
width = float(input("Введите ширину комнаты: "))
if unit == "метры":
    area = length * width
    print("Площадь комнаты составляет", area, "квадратных метров.")
elif unit == "футы":
    area = length * width
    print("Площадь комнаты составляет", area, "квадратных футов.")
else:
    print("Некорректные единицы измерения.")
